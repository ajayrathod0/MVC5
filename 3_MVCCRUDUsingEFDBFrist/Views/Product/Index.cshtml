@*@model IEnumerable<_3_MVCCRUDUsingEFDBFrist.Models.Product>*@

@using PagedList;
@using PagedList.Mvc;

@model IPagedList<_3_MVCCRUDUsingEFDBFrist.Models.Product>


@{
    ViewBag.Title = "Index";
}

<link href="~/Content/PagedList.css" rel="stylesheet" />

<h1>Index</h1>
<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div style="float:right">
    @using (Html.BeginForm("Index", "Product", FormMethod.Get))
    {
        <input type="text" name="Search" value="@Request.QueryString["Search"]" />
        <input type="submit" value="Search" class="btn btn-sm btn-primary" />
    }
</div>


@using (Html.BeginForm("DeleteMultiple", "Product", FormMethod.Post))
{
    <input type="submit" value="Delete Multiple" id="deleteMultiple" class="btn btn-sm btn-danger" />

    <table class="table">
        <tr>
            <th>
                <input type="checkbox" name="selectAll" /> All
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@
                @Html.ActionLink("Name", "Index", new { Sort = ViewBag.NameSort })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Price)*@
                @Html.ActionLink("Price", "Index", new { Sort = ViewBag.PriceSort })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Category.CategoryName)
            </th>
            <th></th>
        </tr>

        @if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="ProductToDelete" value="@item.Id" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @* @Html.DisplayFor(modelItem => item.ImagePath)*@
                        <img src="@item.ImagePath" alt="imgPath" width="50" height="80" />
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Category.CategoryName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">
                    <h3>No Product Available</h3>
                </td>
            </tr>
        }
    </table>
}

@Html.PagedListPager(Model, Page => Url.Action("Index", new
{
    Search = Request.QueryString["Search"],
    Sort = Request.QueryString["Sort"],
    Page = Page
}),
new PagedListRenderOptions()
{
Display = PagedListDisplayMode.IfNeeded,
DisplayItemSliceAndTotal = true
})


<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/DeleteMultiple.js"></script>